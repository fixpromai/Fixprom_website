{
  "name": "fixprom-fullstack",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "cd backend && npm install --ignore-scripts && cd ../frontend && npm install --ignore-scripts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm --prefix frontend run dev",
    "server": "node backend/server.js",
    "start": "npm run server"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
